{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg">
                <div class="card-header bg-gradient-primary text-white text-center">
                    <h2 class="mb-0">Register</h2>
                </div>
                <div class="card-body p-4">
                    {{ form_errors(registrationForm) }}

                    {{ form_start(registrationForm) }}

                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.username, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control rounded-pill'}}) }}
                        {{ form_errors(registrationForm.username) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.name, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control rounded-pill'}}) }}
                        {{ form_errors(registrationForm.name) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control rounded-pill'}}) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control rounded-pill'}}) }}
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.gender, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(registrationForm.gender, {'attr': {'class': 'form-control rounded-pill'}}) }}
                        {{ form_errors(registrationForm.gender) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.birthdate, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(registrationForm.birthdate, {'attr': {'class': 'form-control rounded-pill'}}) }}
                        {{ form_errors(registrationForm.birthdate) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.bio, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(registrationForm.bio, {'attr': {'class': 'form-control rounded-pill'}}) }}
                        {{ form_errors(registrationForm.bio) }}
                    </div>

                    <div class="form-check mb-3">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>

                    <div class="form-check mb-3">
                        {{ form_widget(registrationForm.isStudent, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(registrationForm.isStudent, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        {{ form_errors(registrationForm.isStudent) }}
                    </div>

                    <div class="form-check mb-3">
                        {{ form_widget(registrationForm.isChef, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(registrationForm.isChef, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        {{ form_errors(registrationForm.isChef) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.proofOfChefTitle, 'Proof of Chef Title', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(registrationForm.proofOfChefTitle, {'attr': {'class': 'form-control rounded-pill'}}) }}
                        {{ form_errors(registrationForm.proofOfChefTitle) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.userImage, 'Upload your profile image', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(registrationForm.userImage, {'attr': {'class': 'form-control rounded-pill'}}) }}
                        {{ form_errors(registrationForm.userImage) }}
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill">Register</button>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>

    <style>
        .vh-100 {
            height: 100vh;
        }
        .bg-gradient-primary {
            background: linear-gradient(90deg, #4b6cb7, #182848);
        }
        .form-label {
            font-weight: bold;
            color: #333;
        }
        .form-control {
            border-radius: 25px;
            padding: 10px 15px;
        }
        .form-check-input {
            margin-right: 10px;
        }
        .btn-primary {
            background-color: #4b6cb7;
            border: none;
        }
        .btn-primary:hover {
            background-color: #354873;
        }
    </style>
{% endblock %}